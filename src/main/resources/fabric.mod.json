{
	"schemaVersion": 1,
	"id": "dynamicfps",
	"version": "${version}",

	"name": "Dynamic FPS",
	"description": "Dynamically adjusts FPS so minecraft doesn't hog resources in background.",
	"authors": [
		"juliand665"
	],
	"contact": {
		"homepage": "https://dapprgames.com/mods/",
		"sources": "https://github.com/juliand665/Dynamic-FPS",
		"issues": "https://github.com/juliand665/Dynamic-FPS/issues"
	},

	"license": "MIT",
	"icon": "assets/dynamicfps/icon.png",

	"environment": "client",
	"entrypoints": {
		"main": [
			"dynamicfps.DynamicFPSMod"
		],
		"modmenu": [
			"dynamicfps.ModMenuIntegration"
		]
	},
	"mixins": [
		"dynamicfps.mixins.json"
	],

	"depends": {
		"minecraft": ">=1.20.0",
		"fabricloader": ">=0.14.7",
		"fabric-resource-loader-v0": "*",
		"fabric-rendering-v1": "*",
		"fabric-lifecycle-events-v1": "*",
		"fabric-key-binding-api-v1": "*"
	},

	"custom": {
		"loom:injected_interfaces": {
			"net/minecraft/class_437": ["dynamicfps/util/DynamicFPSScreen"],
			"net/minecraft/class_425": ["dynamicfps/util/DynamicFPSSplashOverlay"]
		}
	}
}
